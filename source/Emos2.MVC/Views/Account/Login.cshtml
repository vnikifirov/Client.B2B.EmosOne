@model Emos2.MVC.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
    string version = typeof(Emos2.MVC.MvcApplication).Assembly.GetName().Version.ToString();
}


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="favicon.ico?v=3" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
          crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

    @*<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
        <link href="@Url.Content("~/Content/main.css?")" rel="stylesheet">
        <link href="@Url.Content("~/Content/jquery.loader.min.css")" rel="stylesheet">
    *@

    <link href="@Url.Content("~/Content/reglog.css")" rel="stylesheet">
</head>

<body>


    <div class="container-fluid">
        <div class="row">

            <div class="login col-10 offset-1  col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-8">
                <div class="logwel">
                    <img id="logoem" src="../img/logo1.png" alt="">
                    <p>WHERE ACTION </p>
                    <p>MEETS</p>
                    <p>EXCELLENCE</p>

                    <p id="toemoslog">wellcome to emos1.com</p>
                    <p id="plsreg">Please register to continue</p>
                </div>
                <div class="form-row">
                    <div class="form-group col-10 offset-1   col-md-7 offset-md-5 col-lg-7 offset-lg-5 col-xl-8 offset-xl-4">
                        <h3>Login</h3>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "form-signin form-row" }))
                        {
                            @Html.AntiForgeryToken()

                            if (ViewData.ModelState["LoginError"] != null)
                            {
                                <input type="hidden" id="ErrorMessage" name="ErrorMessage" value="@ViewData.ModelState["LoginError"].Errors[0].ErrorMessage" />
                            }
                            <div class="alert alert-success" style="display:none">
                                <a href="javascript:void(0)" class="close" data-dismiss="alert">

                                    <span class="fa fa-times"></span>
                                </a>
                                <div class="alert-body">
                                    <span class="fa fa-check"></span>
                                    <h3>Success</h3>
                                    <p></p>
                                </div>
                            </div>

                            <div class="alert alert-error" style="display:none">
                                <a href="javascript:void(0)" class="close" data-dismiss="alert">
                                    <span class="fa fa-times"></span>
                                </a>
                                <div class="alert-body">
                                    <span class="fa fa-times"></span>
                                    <h3>Error</h3>
                                    <p></p>
                                </div>
                            </div>

                            <div class="form-group  col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                                <label for="username">Username</label>
                                <input class="form-control" id="username" name="username" placeholder="Enter username" />
                            </div>
                            <div class="form-group  col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" />
                            </div>
                            <div class="form-group  col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                                <a class="forgot" href="">Forgot Password?</a>
                            </div>
                            <div class="form-group  col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-2 offset-xl-5">
                                <button class="btnlog" type="submit">LOGIN</button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.loader.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Custom/login.js?v=" + version)"></script>
    <script src="@Url.Content("~/Scripts/Custom/shared.js?v=" + version)"></script>
    <script src="@Url.Content("~/Scripts/Custom/common.js?v=" + version)"></script>

    @if (ViewBag.Message != null)
    {
        <script>
            showErrorMessage('@(ViewBag.Message)');
        </script>
    }


    


</body>
</html>
